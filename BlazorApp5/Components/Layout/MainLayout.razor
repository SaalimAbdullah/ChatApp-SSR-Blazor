@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<HeadContent>
    <script src="js/chat.js"></script>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .layout-wrapper {
            display: flex;
            flex-direction: row;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }

        .sidebar {
            width: 450px;
            min-width: 450px;
            background-color: #f8f9fa;
            overflow-y: auto;
            overflow-x:hidden;
            /* Hide scrollbar (cross-browser) */
            scrollbar-width: none; /* Firefox */
            -ms-overflow-style: none; /* IE and Edge */
        }

            .sidebar::-webkit-scrollbar {
                display: none; /* Chrome, Safari, Opera */
            }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .top-row {
            flex-shrink: 0;
            background: #eee;
            padding: 0.5rem;
        }

        .body-content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 1rem;
        }

        .clickable-contact {
            transition: background-color 0.2s ease;
            padding: 2px 4px;
            border-radius: 4px;
            display: inline-block;
        }

            .clickable-contact:hover {
                background-color: #e2e6ea; /* Light gray */

                cursor: pointer;
            }

    </style>
</HeadContent>

<div class="layout-wrapper">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main-content">
        <div class="top-row d-flex justify-content-between align-items-center">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>            <AuthorizeView>
                <Authorized>
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="returnUrl" value="" />
                        <button type="submit" class="btn btn-outline-danger">Sign Out</button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a href="Account/Login" class="btn btn-outline-primary">Sign In</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <div class="body-content">
            @Body
        </div>
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
