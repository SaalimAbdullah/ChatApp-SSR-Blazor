@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<HeadContent>
    <script src="js/chat.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #121212;
            color: #eee;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .layout-wrapper {
            display: flex;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }

        .sidebar {
            width: 450px;
            min-width: 450px;
            background-color: #fefefe;
            color: #ccc;
            overflow-y: auto;
            border-right: 1px solid #333;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
            .sidebar::-webkit-scrollbar {
                display: none;
            }
        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        .top-row {
            background-color: #1a1a1a;
            border-bottom: 1px solid #333;
            padding: 0.75rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .top-row a,
            .top-row button {
                color: #1abc9c;
                text-decoration: none;
                font-size: 0.95rem;
                transition: color 0.2s ease;
                display: flex;
                align-items: center;
            }

                .top-row a i,
                .top-row button i {
                    margin-right: 0.5rem;
                }

                .top-row a:hover,
                .top-row button:hover {
                    color: #16a085;
                }

        .body-content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 1.5rem;
            background-color: #121212;
        }

        .clickable-contact {
            padding: 8px 12px;
            border-radius: 6px;
            margin-bottom: 5px;
            transition: background-color 0.2s ease;
        }

            .clickable-contact:hover {
                background-color: #2a2a2a;
                color: #1abc9c;
                cursor: pointer;
            }

        #blazor-error-ui {
            background: #ff4444;
            color: white;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 0.5rem;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            #blazor-error-ui a {
                color: #ffffff;
                margin-left: 1rem;
                text-decoration: underline;
            }
    </style>
</HeadContent>
